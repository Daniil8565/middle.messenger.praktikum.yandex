{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-class-pattern": "^[a-z][a-z0-9-]*$",
    "block-no-empty": true,
    "unit-allowed-list": ["em", "rem", "px", "vh", "vw"],
    "color-hex-case": "lower",
    "color-hex-length": "short",
    "indentation": 2,
    "string-quotes": "double"
  }
}
