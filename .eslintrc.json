{
  "root": true,
  "env": {
    "es2021": true, // Включаем поддержку ECMAScript 2021
    "node": true // Включаем поддержку Node.js
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "excludedFiles": ["**/node_modules/**", "**/dist/**"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2021, // Поддержка последних фич ECMAScript
        "sourceType": "module" // Указание, что файлы являются модулями
      },
      "rules": {
        "@typescript-eslint/ban-ts-comment": "off",
        "max-len": ["error", { "code": 200 }]
      }
    }
  ],
  "ignorePatterns": ["node_modules/", "dist/"]
}
